<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewForCustomAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/meme1" />

    <TextView
        android:id="@+id/textViewForCustomAdapter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/imageViewForCustomAdapter"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageViewForCustomAdapter"
        android:text="Title" />

    <TextView
        android:id="@+id/textViewForCustomAdapter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageViewForCustomAdapter"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textViewForCustomAdapter1"
        android:layout_toRightOf="@id/imageViewForCustomAdapter"
        android:text="Description" />

</RelativeLayout>